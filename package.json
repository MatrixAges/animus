{
	"name": "animus",
	"author": "1yasa",
	"version": "0.0.0",
	"homepage": "https://github.com/openages/animus",
	"packageManager": "pnpm@10.11.1",
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"dev:app": "turbo run dev --filter=app",
		"build:app": "turbo run build --filter=app",
		"biome": "biome format . --write --staged",
		"submodule:init": "git submodule update --init --recursive",
		"submodule:update": "git submodule sync && git submodule update --recursive --remote --merge"
	},
	"lint-staged": {
		"*.{css,md}": [
			"prettier --write"
		],
		"*.{js,jsx,ts,tsx}": [
			"biome format . --write --staged"
		]
	},
	"devDependencies": {
		"lefthook": "^1.11.13",
		"@biomejs/biome": "2.0.0-beta.6",
		"lint-staged": "^15.5.1",
		"prettier": "^3.5.3",
		"turbo": "^2.5.0"
	},
	"pnpm": {
		"neverBuiltDependencies": ["phantomjs-prebuilt"]
	}
}
