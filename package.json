{
	"name": "monorepo",
	"author": "1yasa",
	"private": true,
	"packageManager": "pnpm@10.11.1",
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"dev:app": "turbo run dev --filter=app",
		"build:app": "turbo run build --filter=app",
		"submodule:init": "git submodule update --init --recursive",
		"submodule:update": "git submodule sync && git submodule update --recursive --remote --merge"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm pretty-quick --pattern \"**/*.*(md|css|js|jsx|ts|tsx)\" --staged"
	},
	"devDependencies": {
		"pretty-quick": "^4.2.2",
		"simple-git-hooks": "^2.13.0",
		"prettier": "^3.6.2",
		"turbo": "^2.5.4",
		"@ianvs/prettier-plugin-sort-imports": "^4.5.1"
	}
}
