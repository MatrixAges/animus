{
	"name": "desktop",
	"productName": "Animus",
	"author": "1yasa",
	"version": "0.0.0",
	"main": "dist/index.js",
	"scripts": {
		"clean": "bun ./build/clean",
		"watch": "bun ./scripts/dev",
		"shell": "electron .",
		"dev": "concurrently \"pnpm run main:dev\" \"bun ./scripts/dev\"",
		"main:dev": "cross-env NODE_ENV=development rslib build --watch",
		"main:prod": "cross-env NODE_ENV=production rslib build",
		"transform": "NODE_ENV=production bun ./build/transform",
		"build": "pnpm run main:prod && pnpm run transform",
		"release:mac": "pnpm run clean && pnpm run main:prod && concurrently \"cross-env ZIP=1 electron-builder -m\" \"electron-builder -m\"",
		"release:win": " pnpm run main:prod && electron-builder -w"
	},
	"dependencies": {
		"@trpc/server": "^11.4.3",
		"await-to-js": "^3.0.0",
		"dayjs": "^1.11.13",
		"electron-conf": "^1.3.0",
		"electron-updater": "^6.6.2",
		"erpc": "workspace:*",
		"fs-extra": "^11.3.0",
		"i18next": "^25.3.1",
		"memfs": "^4.17.2",
		"ofetch": "^1.4.1",
		"zod": "^3.25.74"
	},
	"devDependencies": {
		"@electron/notarize": "^3.0.1",
		"@rslib/core": "^0.10.4",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^24.0.10",
		"@types/watchpack": "^2.4.4",
		"bun": "^1.2.18",
		"bun-types": "^1.2.18",
		"concurrently": "^9.2.0",
		"cross-env": "^7.0.3",
		"deepmerge-ts": "^7.1.5",
		"electron": "37.2.0",
		"electron-builder": "^26.0.12",
		"tinyglobby": "^0.2.14",
		"typescript": "^5.8.3",
		"watchpack": "^2.4.4"
	}
}
