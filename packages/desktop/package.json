{
	"name": "desktop",
	"productName": "Animus",
	"author": "1yasa",
	"version": "0.0.0",
	"scripts": {
		"transform:mac": "cross-env OS=mac bun ./build/transform",
		"transform:win": "cross-env OS=win bun ./build/transform",
		"after": "bun ./build/after",
		"clean": "bun ./scripts/clean",
		"watch": "bun ./dev",
		"shell": "electron .",
		"icns": "electron-icon-builder --input=./assets/logo/logo.png --output=./assets/logo --flatten",
		"dev": "concurrently \"pnpm run main:dev\" \"bun ./dev\"",
		"main:dev": "cross-env OS=mac MODE=dev rspack build --watch",
		"main:prod": "cross-env OS=mac MODE=dev rspack build",
		"prod:mac": "pnpm run transform:mac && cross-env OS=mac MODE=prod rspack build",
		"prod:win": "pnpm run transform:win && cross-env OS=win MODE=prod rspack build",
		"zip:mac:x64": "pnpm run prod:mac && cross-env OS=mac ARCH=x64 electron-builder -m",
		"zip:mac:arm64": "pnpm run prod:mac && cross-env OS=mac ARCH=arm64 electron-builder -m",
		"zip:mac:all": "pnpm run zip:mac:x64 && pnpm run zip:mac:arm64",
		"release:mac": "pnpm run clean && pnpm run zip:mac:all && pnpm run id:mac && pnpm run upload",
		"release:win": "pnpm run prod:win && cross-env OS=win electron-builder -w"
	},
	"dependencies": {
		"@trpc/server": "^11.3.1",
		"await-to-js": "^3.0.0",
		"dayjs": "^1.11.13",
		"electron-conf": "^1.3.0",
		"electron-trpc": "^0.7.1",
		"electron-updater": "^6.6.2",
		"i18next": "^25.2.1",
		"ofetch": "^1.4.1",
		"zod": "^3.25.56",
            "memfs":"^4.17.2"
	},
	"devDependencies": {
		"@desktop/notarize": "^3.0.1",
		"@rspack/cli": "1.3.15",
		"@rspack/core": "1.3.15",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^22.15.30",
		"@types/watchpack": "^2.4.4",
		"bun": "^1.2.15",
		"bun-types": "^1.2.15",
		"concurrently": "^9.1.2",
		"cross-env": "^7.0.3",
		"electron": "36.4.0",
		"electron-builder": "^26.0.12",
		"electron-icon-builder": "^2.0.1",
		"fs-extra": "^11.3.0",
		"tinyglobby": "^0.2.14",
		"typescript": "^5.8.3",
		"watchpack": "^2.4.4"
	}
}
