{
	"name": "desktop",
	"productName": "Animus",
	"author": "1yasa",
	"version": "0.0.0",
	"main": "dist/index.js",
	"scripts": {
		"clean": "bun ./build/clean",
		"watch": "bun ./scripts/dev",
		"shell": "electron .",
		"dev": "concurrently \"pnpm run main:dev\" \"bun ./scripts/dev\"",
		"main:dev": "cross-env NODE_ENV=development rslib build --watch",
		"main:prod": "cross-env NODE_ENV=production rslib build",
		"transform": "NODE_ENV=production bun ./build/transform",
		"build": "pnpm run main:prod && pnpm run transform",
		"release:mac": "pnpm run clean && pnpm run main:prod && concurrently \"cross-env ZIP=1 electron-builder -m\" \"electron-builder -m\"",
		"release:win": " pnpm run main:prod && electron-builder -w"
	},
	"dependencies": {
		"@hono/node-server": "^1.18.1",
		"@hono/zod-validator": "^0.7.2",
		"@trpc/server": "^11.4.3",
		"atomically": "^2.0.3",
		"await-to-js": "^3.0.0",
		"dayjs": "^1.11.13",
		"deepmerge-ts": "^7.1.5",
		"electron-conf": "^1.3.0",
		"electron-updater": "^6.6.7",
		"erpc": "workspace:*",
		"es-toolkit": "^1.39.8",
		"fs-extra": "^11.3.0",
		"fst": "workspace:*",
		"hono": "^4.8.12",
		"i18next": "^25.3.2",
		"mnemonist": "^0.40.3",
		"ofetch": "^1.4.1",
		"stk": "workspace:*",
		"watchpack": "^2.4.4",
		"zod": "^4.0.14"
	},
	"devDependencies": {
		"@electron/notarize": "^3.0.1",
		"@rslib/core": "catalog:",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^24.1.0",
		"@types/watchpack": "^2.4.4",
		"bun": "catalog:",
		"bun-types": "^1.2.19",
		"concurrently": "^9.2.0",
		"cross-env": "^10.0.0",
		"electron": "37.2.5",
		"electron-builder": "^26.0.19",
		"tinyglobby": "^0.2.14",
		"typescript": "^5.9.2"
	}
}
