{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"skipLibCheck": true,
		"lib": ["ESNEXT"],
		"moduleResolution": "Node",
		"strict": true,
		"baseUrl": "../",
		"esModuleInterop": true,
		"paths": {
			"@desktop/*": ["./desktop/src/*"],
			"@shared/*": ["./shared/*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["src", "typings"],
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	}
}
