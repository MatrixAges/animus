{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "master"
	},
	"linter": {
		"enabled": false
	},
	"files": {
		"include": ["packages/app", "packages/website"],
		"ignore": ["node_modules/**", "**/dist/**", "**/.vercel/**", "**/.next/**", "**/*.css"],
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentWidth": 6,
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"trailingCommas": "none",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
